{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Generate Next Version",
            "outFiles": ["${workspaceRoot}/dist/**/*.js"],
            "args": [
                "${workspaceRoot}/node_modules/serverless/bin/serverless",
                "invoke", 
                "local", 
                "-f", 
                "generateNextVersion", 
                "--path", 
                "{}"
            ]
        }
    ]
}
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Generate Next Version",
            "program": "${workspaceFolder}/node_modules/.bin/sls",
            "preLaunchTask": "Serverless Webpack",
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "args": ["invoke", "local", "-f", "generateNextVersion", "--data", "{}"]
        }
    ]
}